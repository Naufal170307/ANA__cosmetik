<?xml version="1.0" encoding="utf-8"?>
 <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCAE2"
    tools:context=".home">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/beauty"
        android:layout_width="258dp"
        android:layout_height="53dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="60dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="AnA Cosmetic"
        android:textAlignment="center"
        android:textColor="#cc05a4"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        android:background="#FFFFFF"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="100dp"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imagehoho"
                    android:layout_width="254dp"
                    android:layout_height="126dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="1dp"
                    android:background="@drawable/round_outline"
                    android:clipToOutline="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/hoho"
                    app:layout_constraintBottom_toBottomOf="@+id/textView8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />


                <TextView
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="340dp"
                    android:backgroundTint="#FFCAE2"
                    android:text="Rekomendasi"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="75dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.177"
                    app:layout_constraintStart_toStartOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/imageplp"
                    android:layout_width="252dp"
                    android:layout_height="144dp"
                    android:layout_weight="3"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="-300dp"
                    android:layout_marginBottom="1dp"
                    android:background="@drawable/round_outline"
                    android:clipToOutline="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/plp"
                    android:adjustViewBounds="true"
                    app:layout_constraintBottom_toBottomOf="@+id/textView8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"/>

                <TextView

                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Skincare Brightening packet"
                    android:textStyle="bold"
                    android:layout_marginLeft="75dp"
                    android:textColor="@color/black"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/imagelokasicon"
                    android:layout_width="252dp"
                    android:layout_height="144dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="3"
                    android:adjustViewBounds="true"
                    android:background="@drawable/round_outline"
                    android:clipToOutline="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/lokasicon"
                    app:layout_constraintBottom_toBottomOf="@+id/textView8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"/>

                <TextView

                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contoh lokasi Salon Solo"
                    android:textStyle="bold"
                    android:layout_marginLeft="75dp"
                    android:textColor="@color/black"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/imagekosmetik"
                    android:layout_width="252dp"
                    android:layout_height="144dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="3"
                    android:adjustViewBounds="true"
                    android:background="@drawable/round_outline"
                    android:clipToOutline="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/locsalon1"
                    app:layout_constraintBottom_toBottomOf="@+id/textView8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"/>

                <TextView

                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contoh lokasi Cosmetic Solo"
                    android:textStyle="bold"
                    android:layout_marginLeft="75dp"
                    android:textColor="@color/black"/>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>